<?xml version="1.0" encoding="utf-8"?>
<!-- This XML represents the layout for displaying note details -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">



    <TextView
        android:id="@+id/detailsMake"
        android:layout_width="95dp"
        android:layout_height="31dp"
        android:text="Make"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="5dp" />

    <TextView
        android:id="@+id/detailsModel"
        android:layout_width="104dp"
        android:layout_height="32dp"
        android:text="Model"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="212dp"
        tools:layout_editor_absoluteY="5dp" />

    <TextView
        android:id="@+id/detailsPrice"
        android:layout_width="103dp"
        android:layout_height="25dp"
        android:text="Price"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="53dp" />

    <TextView
        android:id="@+id/detailsOffers"
        android:layout_width="84dp"
        android:layout_height="24dp"
        android:text="Offers"
        android:textColor="#EA3800"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="228dp"
        tools:layout_editor_absoluteY="53dp" />

    <TextView
        android:id="@+id/detailsYear"
        android:layout_width="97dp"
        android:layout_height="23dp"
        android:text="Year"
        android:textSize="18sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="92dp" />

    <TextView
        android:id="@+id/detailsDistance"
        android:layout_width="82dp"
        android:layout_height="27dp"
        android:text="Distance"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="227dp"
        tools:layout_editor_absoluteY="92dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
