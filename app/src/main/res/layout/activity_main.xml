<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profilebkg"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/name_title"
        android:layout_width="291dp"
        android:layout_height="58dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="Car Dealer App"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profileImg2"
        android:layout_width="292dp"
        android:layout_height="171dp"
        android:layout_marginTop="112dp"
        android:src="@drawable/img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/description"
        android:layout_width="291dp"
        android:layout_height="58dp"
        android:layout_marginTop="140dp"
        android:gravity="center"
        android:text="what are you waiting for!!"
        android:textColor="#1584DD"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.575"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileImg2" />

    <TextView
        android:id="@+id/description2"
        android:layout_width="373dp"
        android:layout_height="84dp"
        android:layout_marginTop="196dp"
        android:gravity="center"
        android:text="Start searching for your dream car."
        android:textColor="#1584DD"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/profileImg2"
        app:layout_constraintTop_toBottomOf="@id/profileImg2" />

    <Button
        android:id="@+id/button_connect"
        android:layout_width="310dp"
        android:layout_height="82dp"
        android:backgroundTint="#6BB6F4"
        android:fontFamily="sans-serif-black"
        android:text="Connect to API"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.896" />


</androidx.constraintlayout.widget.ConstraintLayout>