<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddadminFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cfe2f3"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:id="@+id/AddAdmin"
            android:layout_width="295dp"
            android:layout_height="86dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewAddAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Add Admin"
                android:layout_marginBottom="7dp"
                android:textAlignment="center"
                android:textColor="@color/favoriteCarBackgroundColor"
                android:textSize="60sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <ImageView
                android:id="@+id/emailicon"
                android:layout_width="60dp"
                android:layout_height="62dp"
                android:adjustViewBounds="true"
                android:src="@drawable/gmail" />

            <EditText
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Email"
                android:layout_marginBottom="5dp"
                android:inputType="text|textWebEmailAddress"
                tools:ignore="TouchTargetSizeCheck" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/passicon2"
                android:layout_width="62dp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_baseline_person_outline_24" />

            <EditText
                android:id="@+id/FirstName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:layout_marginBottom="5dp"
                android:hint="FirstName"
                android:inputType="textPersonName" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/constraintLayoutFirst"
            android:layout_width="match_parent"
            android:layout_height="59dp">

            <ImageView
                android:id="@+id/name"
                android:layout_width="63dp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/user_filled" />

            <EditText
                android:id="@+id/lastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="LastName"
                android:layout_marginBottom="5dp"
                android:inputType="textPersonName"
                android:minHeight="48dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/constraintLayoutGender"
            android:layout_width="match_parent"
            android:layout_height="65dp">

            <ImageView
                android:id="@+id/gender"
                android:layout_width="62dp"
                android:layout_height="48dp"
                android:adjustViewBounds="true"
                android:src="@drawable/gender" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="        Gender"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinner_Gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:minHeight="48dp"
                android:scrollbarSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/constraintLayoutpass"
            android:layout_width="match_parent"
            android:layout_height="46dp">

            <ImageView
                android:id="@+id/passicon3"
                android:layout_width="58dp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/password" />

            <EditText
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Password"
                android:layout_marginBottom="5dp"
                android:inputType="textPassword"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/constraintLayoutconf"
            android:layout_width="match_parent"
            android:layout_height="53dp">

            <ImageView
                android:id="@+id/conficon"
                android:layout_width="62dp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/confirm" />

            <EditText
                android:id="@+id/confirmPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Confirmpassword"
                android:layout_marginBottom="5dp"
                android:inputType="textPassword"
                android:minHeight="48dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/constraintLayoutCountries"
            android:layout_width="match_parent"
            android:layout_height="53dp">

            <ImageView
                android:id="@+id/countries"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/world" />

            <Spinner
                android:id="@+id/spinner_Country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:minHeight="48dp"
                android:layout_marginBottom="5dp"
                android:scrollbarSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/constraintLayoutCities"
            android:layout_width="match_parent"
            android:layout_height="53dp">

            <ImageView
                android:id="@+id/city"
                android:layout_width="68dp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/location" />

            <Spinner
                android:id="@+id/spinner_City"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:minHeight="48dp"
                android:layout_marginBottom="5dp"
                android:scrollbarSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/constraintPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <ImageView
                android:id="@+id/phoneIcon"
                android:layout_width="72dp"
                android:layout_height="53dp"
                android:adjustViewBounds="true"
                android:src="@drawable/phone" />

            <TextView
                android:id="@+id/zip_code_textView"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_weight="1"
                android:text="Zip Code" />

            <EditText
                android:id="@+id/phoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Phone Number"
                android:inputType="number"
                android:layout_marginBottom="5dp"
                android:minHeight="48dp" />
        </LinearLayout>

        <Button
            android:id="@+id/AddAdminButton"
            android:layout_width="284dp"
            android:layout_height="75dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#30C9EF"
            android:fontFamily="sans-serif-condensed"
            android:text="Add Admin"
            android:textSize="30sp"
            android:textStyle="bold"
            app:cornerRadius="50dp" />


    </LinearLayout>

</FrameLayout>